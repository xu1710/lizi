<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
	</style>
	
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
	
	<style name="main" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#33ccff</item>
		<item name="colorPrimaryDark">#3ecccc</item>
		<item name="colorAccent">#33cc33</item>
		<item name="windowActionBar">false</item>  
		<item name="windowNoTitle">true</item>
    </style>
	
	<style name="about" parent="main">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#cc99cc</item>
		<item name="colorPrimaryDark">#cc99ff</item>
    </style>
	
	<style name="experience" parent="about">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#99cccc</item>
		<item name="colorPrimaryDark">#99cccc</item>
    </style>
	
    <style name="welcomepage" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
		<item name="android:background">@drawable/background</item>
    </style>
	
</resources>
