		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="版本号：1.1.0"
			android:textColor="#FF35F31B"
			android:textSize="15sp"
			android:layout_margin="5dp"/>

	</LinearLayout>

