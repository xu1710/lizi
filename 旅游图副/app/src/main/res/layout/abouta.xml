		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="联系作者：（QQ）2275426161"
			android:textColor="#FF35F31B"
			android:textSize="15sp"
			android:layout_margin="5dp"/>

